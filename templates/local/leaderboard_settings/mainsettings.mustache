<!--// Display setting for turning leader boards on and off //-->
<!--// Setting for group mode for leader boards //-->
<!--// List of leader boards to enable / disable //-->
<div class="container-fluid">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">General settings</h4>
            <div>
                <div class="custom-control custom-switch">
                  <input type="checkbox" class="custom-control-input" id="cS-leaderboard" checked="true">
                  <label class="custom-control-label" for="cS-leaderboard">Show leaderboard</label>
                </div>
                <div class="custom-control custom-switch mt-2">
                  <input type="checkbox" class="custom-control-input" id="cS-leaderboard-groups" checked="false">
                  <label class="custom-control-label" for="cS-leaderboard-groups">Show only users from my groups in the leaderboard</label>
                </div>
            </div>
        </div>
    </div>

</div>
